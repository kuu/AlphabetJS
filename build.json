{
  "defaultTarget": "all",
  "properties": {
    "sourceDir": "src",
    "buildDir": "build",
    "binDir": "bin",
    "vendorDir": "vendor"
  },
  "resources": {
    "Breader": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/Breader.git",
      "branch": "master"
    }
  },
  "targets": {
    "all": {
      "depends": [
        "AS1Decompiler",
        "ABC"
      ]
    },

    "core": {
      "builder": "closure-compiler",
      "module": true,
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}",
          "files": [
            "core.js",
            "Program.js",
            "Loader.js"
          ]
        }
      ]
    },

    "AST": {
      "builder": "closure-compiler",
      "module": true,
      "depends": [
        "core"
      ],
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/AST",
          "include": "\\.js$"
        }
      ]
    },

    "AS1Decompiler": {
      "builder": "closure-compiler",
      "module": true,
      "depends": [
        "AST"
      ],
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/ActionScript12/Decompiler",
          "files": [
            "ASProgram.js",
            "Loader.js",
            "AS1Handlers.js"
          ]
        }
      ]
    },

    "AS2Decompiler": {
      "builder": "closure-compiler",
      "module": true,
      "depends": [
        "AS1Decompiler"
      ],
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/ActionScript12/Decompiler",
          "files": [
            "AS2Handlers.js"
          ]
        }
      ]
    },

    "AS1VM": {
      "builder": "closure-compiler",
      "module": true,
      "depends": [
        "core"
      ],
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/ActionScript12/Interpreter",
          "files": [
            "ASProgram.js",
            "Loader.js",
            "AS1Handlers.js"
          ]
        }
      ]
    },

    "AS2VM": {
      "builder": "closure-compiler",
      "module": true,
      "depends": [
        "AS1VM"
      ],
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/ActionScript12/Interpreter",
          "files": [
            "AS2Handlers.js"
          ]
        }
      ]
    },

    "ABC": {
      "builder": "closure-compiler",
      "module": true,
      "resources": [
        {
          "type": "files",
          "root": "${sourceDir}/ABC",
          "files": [
            "breader-ext.js",
            "ABCProgram.js",
            "Loader.js"
          ]
        }
      ]
    },

    ".+": {
      "builder": "closure-compiler",
      "outputs": "${binDir}/alphabet.js",
      "resources": [
        {
          "type": "reference",
          "name": "Breader"
        },

        {
          "type": "output",
          "include": "\\.js$"
        }
      ]
    }
  }
}